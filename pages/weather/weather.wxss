/* pages/weather/weather.wxss */
.content{
    display: flex;
    flex-direction: column;
    background: #eee;
    padding-left: 10px;
    padding-right: 10px;
}
.weather_list{
    padding-top: 120rpx;
}
.weather_item{
    display: flex;
    flex-direction: column;
}
.search_top{
    display: flex;
    flex-direction: row;
    padding: 10rpx;
    background: #fff;
    margin-bottom: 20px;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9;
}
.input{
    width: 55%;
    background: #fff;
    font-size: 16px;
    margin-left: 30px;
    padding: 10px;
    align-self: center;
    border-radius: 10rpx;
    border:1px solid #eee
}
.search_button{
    height: 90rpx;
    align-self: center;
}
.date{
    background: #fff;
    padding: 5rpx;
    margin-left: 30rpx
}
.weather_view{
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx
}
.weather{
    width: 70%;
    display: flex;
    flex-direction: column;
    margin-left: 30rpx
}
.weather_img{
    width: 100rpx;
    height: 100rpx;
    align-self: center;
    float: right
}
.weather_item{
    width: auto;
    background: #fff;
    border-radius: 5px;
    box-shadow: 1px,1px,1px rgba(0,0,0,2);
    margin-bottom: 15px;
    padding: 5px;
    position: relative;
}
.line{
    border: 1px dashed #CCC;
}